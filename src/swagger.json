{
  "openapi": "3.0.0",
  "info": {
    "title": "Atlas",
    "description": "Atlas API Documentation",
    "version": "1.0.0",
    "contact": {
      "email": "support@example.com"
    },
    "tags": {
      "name": "users",
      "description": "User management."
    }
  },
  "paths": {
    "/users": {
      "post": {
        "tags": [
          "users"
        ],
        "summary": "Create a new user.",
        "description": "Create a user.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Rocketseat",
                  "email": "user_email@example.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Operation performed successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "admin": {
                      "type": "boolean"
                    },
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "admin": false,
                    "id": "48b59948-22d5-4acc-8be9-aa2c618cea6b",
                    "name": "User name sample.",
                    "email": "user_email@example.com",
                    "created_at": "2022-03-04T23:45:51.334Z",
                    "updated_at": "2022-03-04T23:45:51.334Z"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Email already exists.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": "string"
                  },
                  "example": {
                    "error": "This email is already in use."
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "users"
        ],
        "summary": "Returns all users.",
        "description": "Only `admin` user can access.",
        "parameters": [
          {
            "in": "header",
            "name": "user_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Operation performed successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "admin": {
                        "type": "boolean"
                      },
                      "id": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string"
                      },
                      "updated_at": {
                        "type": "string"
                      }
                    },
                    "example": [
                      {
                        "admin": true,
                        "id": "c5c739c0-4576-47a4-82f5-8b314d2eba21",
                        "name": "Rocketseat",
                        "email": "oi@example.com",
                        "created_at": "2022-03-10T23:10:40.025Z",
                        "updated_at": "2022-03-10T23:10:40.025Z"
                      },
                      {
                        "admin": false,
                        "id": "d32e9e4e-43cd-4f64-a393-4f0158c9e348",
                        "name": "Junior Cundari",
                        "email": "user_email@example.com",
                        "created_at": "2022-03-10T23:10:40.081Z",
                        "updated_at": "2022-03-10T23:10:40.081Z"
                      }
                    ]
                  }
                }
              }
            }
          },
          "400": {
            "description": "User without permission or not found.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": "string"
                  },
                  "example": {
                    "error": "You need to be an administrator to list all users."
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": [
          "users"
        ],
        "summary": "Returns a specific user.",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "description": "User ID",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Operation performed successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "admin": {
                      "type": "boolean"
                    },
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "admin": false,
                    "id": "c5c739c0-4576-47a4-82f5-8b314d2eba21",
                    "name": "Rocketseat",
                    "email": "user_email@example.com",
                    "created_at": "2022-03-12T22:52:40.529Z",
                    "updated_at": "2022-03-12T22:52:40.529Z"
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": "string"
                  },
                  "example": {
                    "error": "User not found."
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "tags": [
          "users"
        ],
        "summary": "Turn a user an administrator.",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Operation performed successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "admin": {
                      "type": "boolean"
                    },
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "admin": true,
                    "id": "m9c739c0-8876-47a4-52f5-8b314d2ebh21",
                    "name": "Rocketseat",
                    "email": "user_email@example.com",
                    "created_at": "2022-03-12T22:52:40.529Z",
                    "updated_at": "2022-03-12T22:52:40.529Z"
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": "string"
                  },
                  "example": {
                    "error": "User not found."
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}